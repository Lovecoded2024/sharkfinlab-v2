# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database URLs (from Supabase Dashboard -> Database -> Connection Pooling)
DATABASE_URL="postgresql://postgres:[password]@db.[project-ref].supabase.co:6543/postgres?pgbouncer=true&connection_limit=1"
DIRECT_URL="postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres"

# LLM API Keys
OPENAI_API_KEY=sk-...
# 或者使用 Moonshot (Kimi)
MOONSHOT_API_KEY=sk-...
# 或者使用 Claude
ANTHROPIC_API_KEY=sk-ant-...

# Tushare API (用于数据获取，需要在 Edge Function 中配置)
TUSHARE_TOKEN=your-tushare-token
